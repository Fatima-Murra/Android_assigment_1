+package com.example.assigment1_1211089_android;
+
+import android.content.Intent;
+import android.os.Bundle;
+import android.view.View;
+import android.widget.AdapterView;
+import android.widget.ArrayAdapter;
+import android.widget.Button;
+import android.widget.EditText;
+import android.widget.Spinner;
+import android.widget.TextView;
+
+import androidx.appcompat.app.AppCompatActivity;
+
+public class MainActivity extends AppCompatActivity {
+
+    private EditText weightInput, heightInput;
+    private TextView resultText, selectedCategoryText;
+    private Button calculateButton, resetButton;
+    private Spinner bmiCategorySpinner;
+
+    @Override
+    protected void onCreate(Bundle savedInstanceState) {
+        super.onCreate(savedInstanceState);
+        setContentView(R.layout.activity_main);
+
+        // Initialize the UI elements
+        weightInput = findViewById(R.id.weightInput);
+        heightInput = findViewById(R.id.heightInput);
+        resultText = findViewById(R.id.resultText);
+        selectedCategoryText = findViewById(R.id.selectedCategoryText);
+        calculateButton = findViewById( R.id.calculateButton);
+        resetButton = findViewById(R.id.resetButton);
+        bmiCategorySpinner = findViewById(R.id.bmiCategorySpinner);
+
+        // Set up Spinner for BMI categories
+        setupBMICategorySpinner();
+
+        // Set the onClickListener for the calculate button
+        calculateButton.setOnClickListener(v -> calculateBMI());
+
+        // Set the onClickListener for the reset button
+        resetButton.setOnClickListener(v -> resetFields());
+
+        // Set a listener for Spinner selection
+        bmiCategorySpinner.setOnItemSelectedListener(new AdapterView.OnItemSelectedListener() {
+            @Override
+            public void onItemSelected(AdapterView<?> parentView, View selectedItemView, int position, long id) {
+                String selectedCategory = (String) parentView.getItemAtPosition(position);
+
+                // Update the TextView with the selected category
+                selectedCategoryText.setText("Selected Category: " + selectedCategory);
+
+                // Optionally, open BMICategoryActivity with the selected BMI category
+                Intent intent = new Intent(MainActivity.this, BMICategoryActivity.class);
+                intent.putExtra("BMI_CATEGORY", selectedCategory);
+                startActivity(intent);
+            }
+
+            @Override
+            public void onNothingSelected(AdapterView<?> parentView) {
+                // Do nothing
+            }
+        });
+    }
+
+    private void setupBMICategorySpinner() {
+        // Define BMI categories
+        String[] bmiCategories = {
+                "Severe Thinness", "Moderate Thinness", "Mild Thinness",
+                "Normal Weight", "Overweight", "Obesity Class 1",
+                "Obesity Class 2", "Obesity Class 3"
+        };
+
+        // Create an ArrayAdapter using the string array and a default spinner layout
+        ArrayAdapter<String> adapter = new ArrayAdapter<>(this, android.R.layout.simple_spinner_item, bmiCategories);
+        adapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item);
+
+        // Apply the adapter to the spinner
+        bmiCategorySpinner.setAdapter(adapter);
+    }
+
+    private void calculateBMI() {
+        String weightStr = weightInput.getText().toString();
+        String heightStr = heightInput.getText().toString();
+
+        if (isValidInput(weightStr, heightStr)) {
+            float weight = Float.parseFloat(weightStr);
+            float height = Float.parseFloat(heightStr);
+
+            if (height > 0) {
+                // Calculate BMI
+                float bmi = weight / (height * height);
+                String bmiCategory = getBMICategory(bmi);
+
+                resultText.setText("Your BMI is: " + String.format("%.2f", bmi) + "\nCategory: " + bmiCategory);
+            } else {
+                showErrorMessage("Height must be greater than zero.");
+            }
+        } else {
+            showErrorMessage("Please enter both weight and height correctly.");
+        }
+    }
+
+    private boolean isValidInput(String weightStr, String heightStr) {
+        try {
+            Float.parseFloat(weightStr);
+            Float.parseFloat(heightStr);
+            return !weightStr.isEmpty() && !heightStr.isEmpty();
+        } catch (NumberFormatException e) {
+            return false;
+        }
+    }
+
+    private void showErrorMessage(String message) {
+        resultText.setText(message);
+    }
+
+    private void resetFields() {
+        weightInput.setText("");
+        heightInput.setText("");
+        resultText.setText("");
+        selectedCategoryText.setText("Selected Category will appear here");
+    }
+
+    private String getBMICategory(float bmi) {
+        if (bmi < 16) return "Severe Thinness";
+        if (bmi < 17) return "Moderate Thinness";
+        if (bmi < 18.5) return "Mild Thinness";
+        if (bmi < 25) return "Normal Weight";
+        if (bmi < 30) return "Overweight";
+        if (bmi < 35) return "Obesity Class 1";
+        if (bmi < 40) return "Obesity Class 2";
+        return "Obesity Class 3";
+    }
+}
